<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_violet</item>
        <item name="colorPrimaryVariant">@color/cornflower_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <!--        <item name="colorOnPrimarySurface">@color/mine_shaft</item>-->


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/manatee</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimaryDark">@color/white</item>

        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <!--        <item name="android:windowBackground">@color/white</item>-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <!--Text styles-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AppTheme.Headline1</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AppTheme.Headline3</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AppTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AppTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AppTheme.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AppTheme.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AppTheme.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.AppTheme.Overline</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Headline3SemiBold" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Headline5SemiBold" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Headline5Bold" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Headline6SemiBold" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>


    <style name="TextAppearance.AppTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.AppTheme.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Body1SemiBold" parent="TextAppearance.AppTheme.Body1">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.AppTheme.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Body2SemiBold" parent="TextAppearance.AppTheme.Body2">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="CaptionSemiBold" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.AppTheme.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="OverlineSemiBold" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="PrimaryContainedButton" parent="Body1SemiBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/contained_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/victoria</item>
    </style>

    <style name="AccentContainedButton" parent="Body1SemiBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/contained_accent_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AccentOutlineButton" parent="Body1SemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outline_accent_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--Bottom sheet style-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_main_top_rounded</item>
    </style>

    <style name="SharkBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_shark_top_rounded</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/deluge</item>
        <item name="android:navigationBarColor">@color/victoria</item>
    </style>

    <style name="SharkBaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/SharkBottomSheet</item>
    </style>

    <style name="SharkBottomSheetDialogTheme" parent="SharkBaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/shark</item>
        <item name="android:navigationBarColor">@color/shark</item>
    </style>

    <!--    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
            <item name="bottomSheetStyle">@style/AppModalStyle</item>
        </style>

        <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
            <item name="background">@drawable/background_main_top_rounded</item>
        </style>-->

    <style name="ContainedEditText" parent="TextAppearance.AppTheme.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/background_editable_layout_abbey</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Body1</item>
        <item name="android:textColorHint">@color/raven</item>
    </style>

    <style name="OutlinedEditText" parent="TextAppearance.AppTheme.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outline_primary_button</item>
        <item name="android:padding">16dp</item>
        <!--        <item name="android:textColor">@color/white</item>-->
        <!--        <item name="android:textColorHint">@color/white_26</item>-->
    </style>

    <!--Image shape-->
    <style name="Corner8dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--Image shape-->
    <style name="Corner16dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!--Image shape-->
    <style name="Corner40p" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40%</item>
    </style>

    <!--Image shape-->
    <style name="Corner50dp" parent="">
        <item name="cornerFamily">rounded</item>
