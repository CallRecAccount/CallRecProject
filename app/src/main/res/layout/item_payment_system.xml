<?xml version="1.0" encoding="utf-8"?>
<uz.invan.rovitalk.data.models.price.view.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPaymentSystems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless"
    android:clickable="true"
    app:cardBackgroundColor="?colorPrimary"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:contentDescription="@string/payment_system_image"
        tools:src="@drawable/ic_payme" />
</uz.invan.rovitalk.data.models.price.view.SquareCardView>